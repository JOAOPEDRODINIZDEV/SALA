#include <stdlib.h>
#include <string.h>

int main(){
	
		setlocale(LC_ALL,"Portuguese_Brazil");
	
	char text[100];	
	int i,j;
	
	printf("Digite uma frase:");
	    gets(text);
	    
	j=strlen(text);
	
	puts("A frse ao contrÃ¡rio fica");
	
	for( i=j; i>=0; i--){
		
		printf("%c",text[i]);
	}
	
	return 0;
}
